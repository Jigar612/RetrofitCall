<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jigar.android.retrofitcall.LoginActivity">

    <EditText
        android:id="@+id/ed_user_nm"
        android:hint="Enter user name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/ed_pass"
        android:hint="Password"
        android:layout_below="@+id/ed_user_nm"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_login_with"
        android:layout_below="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_login"
        android:text="Login"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/spinner_login_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
